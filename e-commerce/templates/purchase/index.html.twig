{% extends 'base.html.twig' %}

{% block title %}
    Mes commandes
{% endblock %}

{% block body %}
    <h1>Mes commandes</h1>

    <table class="table">
        <thead>
            <tr>
                <td>Numéro</td>
                <td>Adresse</td>
                <td>Date de commande</td>
                <td>Total</td>
            </tr>
        </thead>

        <tbody>
            {% for p in purchases %}
                <tr>
                    <td>{{ p.id }}</td>
                    <td>{{ p.adress }} <br> {{ p.postalCode }}, {{ p.city }} </td>
                    <td>TODO</td>
                    <td>{{ p.total / 100 }}€</td>
                </tr>
            {% endfor %}
        </tbody>
    
    </table>
{% endblock %}