{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container">
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<div class="text-center mt-5">
				<div class="card mb-5" style="width:30rem;">

					<h1 class="h3 mb-3 font-weight-normal text-center mt-5">
						<b>Connectez-vous</b>
					</h1>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="saissez votre mail">
					<label for="inputPassword">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="saissez votre mot de passe">
					<br>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
					                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					                    See https://symfony.com/doc/current/security/remember_me.html
					
					                    <div class="checkbox mb-3">
					                        <label>
					                            <input type="checkbox" name="_remember_me"> Remember me
					                        </label>
					                #}
					<div class="text-center">
						<button class="btn btn-lg btn-primary mx-5" type="submit">
							Connexion
						</button>
						<a href="/register" type="button" class="btn btn-lg btn-danger mx-5">
							Inscription
						</a>
					</div>
				</div>
			</form>
		</div>
    </div>
	{% endblock %}
