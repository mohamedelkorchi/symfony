{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<div class="container mt-5">
        <div class="row">

            {% for prod in liste_produits %}
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2 ">
                        <div class="bordure-grise px-3 pt-3 mb-3 shadow">
                            <a href="/detailproduit/{{ prod.id }}">
                                <img class="img-fluid w-100" src="/images/{{ prod.image }}" >
                                <h4 class="text-center">
                                {{ prod.Name}}
                                </h4>
                            </a>
                        </div>
                    </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}